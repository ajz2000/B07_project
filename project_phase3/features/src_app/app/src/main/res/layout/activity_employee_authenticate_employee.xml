<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/activityPadding"
  tools:context=".Activity.Employee.EmployeeAuthenticateEmployee">


  <EditText
    android:id="@+id/authenticateEmployeeIdEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:inputType="number"
    android:hint="@string/adminPromoteHint" />

  <EditText
    android:id="@+id/authenticateEmployeePassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/authenticateEmployeeIdEntry"
    android:layout_marginTop="40dp"
    android:hint="@string/loginMenuPasswordHint"
    android:inputType="textPassword" />

  <Button
    android:id="@+id/authenticateEmployeeBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/authenticateEmployeePassword"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:text="@string/authenticateBtn"
    app:icon="@drawable/ic_verified_user_black_24dp" />
</RelativeLayout>