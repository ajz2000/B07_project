<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Activity.Admin.AdminSaveAppData"
  android:padding="@dimen/activityPadding">

  <TextView
    android:id="@+id/saveAppDataPrompt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="15dp"
    android:text="@string/saveAppDataPrompt"
    android:textSize="@dimen/textViewTextSize" />

  <EditText
    android:id="@+id/saveAppDataEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="15dp"
    android:layout_toRightOf="@id/saveAppDataPrompt"
    android:hint="@string/saveAppDataHint"
    android:inputType="textUri"
    android:textSize="20dp" />

  <Button
    android:id="@+id/saveDataBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/saveAppDataEntry"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="-64dp"
    android:text="@string/saveAppDataBtn"
    app:icon="@drawable/ic_save_black_24dp" />

</RelativeLayout>